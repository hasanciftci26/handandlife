<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="poPasswordInfo"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Right"
		initialFocus="closePasswordInfo"
        showHeader="false">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="closePasswordInfo"
					text="{i18n>Close}"
					press="onClosePasswordInfo" />
			</OverflowToolbar>
		</footer>
        <VBox>
            <Text text="{i18n>PasswordInfo1}" class="sapUiSmallMarginTop sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
            <Text text="{i18n>PasswordInfo2}" class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
            <Text text="{i18n>PasswordInfo3}" class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
            <Text text="{i18n>PasswordInfo4}" class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
            <Text text="{i18n>PasswordInfo5}" class="sapUiTinyMarginTop sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
        </VBox>
        <endButton>
            <Button text="Close"/>
        </endButton>
	</Popover>
</core:FragmentDefinition>